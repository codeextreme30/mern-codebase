      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set(\"token\", jsonData.data.token);",
                  "    pm.environment.set(\"userId\", jsonData.data.user.id);",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"yosra ziad\",\n  \"email\": \"yosra.ziad@example.com\",\n  \"password\": \"Yosra1234\",\n  \"age\": 25,\n  \"bio\": \"Software Developer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "description": "Register a new user with name, email, password, and optional fields (age, bio).\n\n**Required fields:**\n- name (min 3 characters)\n- email (valid email format, unique)\n- password (min 8 characters, must contain uppercase, lowercase, and number)\n\n**Optional fields:**\n- age (positive number)\n- bio (max 500 characters)"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set(\"token\", jsonData.data.token);",
                  "    pm.environment.set(\"userId\", jsonData.data.user.id);",
                  "    ",
                  "    pm.test(\"Status code is 200\", function () {",
                  "        pm.response.to.have.status(200);",
                  "    });",
                  "    ",
                  "    pm.test(\"Response has token\", function () {",
                  "        pm.expect(jsonData.data.token).to.exist;",
                  "    });",
                  "    ",
                  "    pm.test(\"Response has user data\", function () {",
                  "        pm.expect(jsonData.data.user).to.exist;",
                  "        pm.expect(jsonData.data.user.email).to.exist;",
                  "    });",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"yosra.ziad@example.com\",\n  \"password\": \"Yosra1234\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Login user with email and password.\n\n**Note:** The email field accepts email, username, or phone number (inputname=\"email\").\n\n**Required fields:**\n- email (valid email format)\n- password\n\n**Response includes:**\n- User data (without password)\n- JWT token for authentication"
          },
